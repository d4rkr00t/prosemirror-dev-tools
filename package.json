{
    "name": "prosemirror-dev-tools",
    "version": "1.2.1",
    "description": "Dev Tools for ProseMirror",
    "main": "dist/cjs/index.js",
    "module": "src/index.js",
    "scripts": {
        "commit": "git-cz",
        "test": "jest --verbose",
        "start": "aik example/index.js -r",
        "prebuild": "rimraf ./dist",
        "build": "npm run build:umd && npm run build:cjs",
        "build:umd": "webpack --optimize-minimize --config ./.build/webpack.config.umd.js",
        "build:cjs": "BABEL_ENV=production babel src --out-dir dist/cjs",
        "lint:all": "eslint ./src",
        "lint:staged": "lint-staged",
        "prepare": "npm run lint:all && npm run build",
        "release:major": "pmm major",
        "release:minor": "pmm minor",
        "release:patch": "pmm patch",
        "ci:github-release": "conventional-github-releaser -p angular"
    },
    "keywords": [],
    "author": "Stanislav Sysoev <@d4rkr00t>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/d4rkr00t/prosemirror-dev-tools"
    },
    "dependencies": {
        "cerebral": "2.0.0-b-alpha.44b98c71",
        "date-fns": "^1.28.2",
        "highlight.js": "^9.11.0",
        "html": "^1.0.0",
        "javascript-stringify": "^1.6.0",
        "jsondiffpatch": "^0.2.4",
        "prosemirror-model": "*",
        "prosemirror-state": "*",
        "react": "^15.4.2",
        "react-dock": "^0.2.3",
        "react-dom": "^15.4.2",
        "react-json-tree": "^0.10.7",
        "react-syntax-highlighter": "^5.5.0",
        "react-tabs": "^0.8.2",
        "styled-components": "^2.0.0-15"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "./node_modules/"
        ],
        "unmockedModulePathPatterns": [
            "./node_modules/react",
            "./node_modules/react-dom",
            "./node_modules/react-addons-test-utils",
            "./node_modules/fbjs"
        ],
        "transformIgnorePatterns": [
            "./node_modules/"
        ]
    },
    "devDependencies": {
        "aik": "^0.15.0",
        "babel-cli": "^6.24.1",
        "babel-core": "^6.24.1",
        "babel-loader": "^7.0.0",
        "babel-preset-env": "^1.4.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-jest": "^19.0.0",
        "commitizen": "^2.9.6",
        "conventional-github-releaser": "^1.1.3",
        "cz-conventional-changelog": "^2.0.0",
        "eslint": "^3.19.0",
        "eslint-plugin-react": "^6.10.3",
        "lint-staged": "^3.4.0",
        "jest": "^19.0.2",
        "pmm": "^1.3.1",
        "pre-commit": "^1.2.2",
        "prettier": "^0.22.0",
        "prosemirror-example-setup": "*",
        "prosemirror-schema-basic": "*",
        "prosemirror-view": "*",
        "rimraf": "^2.6.1",
        "react-addons-test-utils": "^15.5.1",
        "react-test-renderer": "^15.5.4",
        "webpack": "^2.4.1"
    },
    "eslintConfig": {
        "extends": "./node_modules/aik/lib/eslint-config.js"
    },
    "pre-commit": [
        "lint:staged"
    ],
    "lint-staged": {
        "*.js": [
            "eslint",
            "prettier --write",
            "git add"
        ]
    },
    "release": {
        "branch": "release"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}